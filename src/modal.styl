.modal
    display none

    &--open
        display table
        height 100%
        left 0
        position absolute
        right 0
        table-layout fixed
        top 0
        width 100%

    &__overlay
        background-color rgba(0, 0, 0, 0.4)
        bottom 0
        left 0
        position fixed
        right 0
        top 0

    &__body
        display table-cell
        margin-bottom 20px
        padding 24px 0
        position relative
        text-align center
        vertical-align middle
        width 100%

    &__content
        background #fff
        border-radius 2px
        display inline-block
        min-height 150px
        min-width 200px
